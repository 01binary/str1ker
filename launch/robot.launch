<launch>
  <node
    name="robot"
    pkg="str1ker"
    type="robot"
    required="true"
    output="screen"
  >
    <rosparam>
      adc:
        controller: 'arduinoMicro'
        enable: true
        dev: '/dev/ttyACM0'
      arm1:
        controller: 'arm'
        enable: true
        shoulder:
          controller: 'servo'
          enable: true
          gpioLPWM: 22
          gpioRPWM: 23
          encoder:
            controller: 'potentiometer'
            enable: true
            adc: 'arduinoMicro'
            channel: 0
            offset: 0
            range: 360
        upperarm:
          controller: 'linear'
          enable: false
          gpioLPWM: 6
          gpioRPWM: 5
          time: 5
          encoder:
            controller: 'potentiometer'
            enable: false
            adc: 'arduinoMicro'
            channel: 1
            offset: 0
            range: 360
        forearm:
          controller: 'linear'
          enable: false
          gpioLPWM: 25
          gpioRPWM: 24
          time: 4
          encoder:
            controller: 'potentiometer'
            enable: false
            adc: 'arduinoMicro'
            channel: 2
            offset: 0
            range: 360
        trigger:
          controller: 'solenoid'
          enable: false
          gpio: 16
    </rosparam>
  </node>
</launch>
